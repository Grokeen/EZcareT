<src:WinBase x:Class="DH.View.CodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CodeWindow" 
        ResizeMode="CanResize" 
        WindowStartupLocation="CenterScreen" 
        SnapsToDevicePixels="True"
        xmlns:src="clr-namespace:DH.Lib" 
             xmlns:uc="clr-namespace:DH.UC"
        MinHeight="100" MinWidth="100" Top="0" Left="0" 
        Height="768" Width="1400" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <!--<RowDefinition Height="40"/>-->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <uc:DHTextBox x:Name="txtCode" TextWrapping="Wrap" GotFocus="txtCode_GotFocus" FontFamily="Consolas" FontSize="14" VerticalScrollBarVisibility="Auto" Grid.Row="0" Margin="5"/>


    </Grid>
</src:WinBase>
